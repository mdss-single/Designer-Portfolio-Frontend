-------------------------------------------------------------------*/

/*------------------------------------------------------------------
[1. General styles (inputs, buttons, animation functions, etc)]
*/
@require '_elements.styl'
html
	overflow-y scroll
	min-height 100vh
	font-size 62.5%
	cursor default
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
body
	display flex
	flex-direction column
	min-height 100vh
	color #000
	font normal 1.4rem/1.3 fontMain
	background-color #fff
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color #888
	font inherit
	text-decoration underline
	transition all .2s
	&:hover
		text-decoration none
img
	vertical-align top
	max-width 100%
.main
	flex 1


/*------------------------------------------------------------------
[2. Header]
*/
.header
	flex-shrink 0
	position relative
	height 130px
	&--second
	&--third
		@media $desktop
			height 152px
	&__logo
		position absolute
		top 50%
		left 20px
		color #000
		text-decoration none
		transform translateY(-50%)
		@media $desktop
			left 50px
		^[0]--second &
		^[0]--third &
			@media $desktop
				top 25px
				left 50%
				text-align center
				transform translate(-50%, 0)
		^[0]--third &
			@media $desktop
				top 15px
		&-name
			display block
			font-size 2.8rem
			font-family fontSub
			^[0]--second &
			^[0]--third &
				@media $desktop
					font-size 3.6rem
		&-slogan
			font-weight 300
			text-transform uppercase
			^[0]--second &
			^[0]--third &
				@media $desktop
					color #888
	&__burger
		position absolute
		top 50%
		right 20px
		z-index 100
		width 40px
		height 30px
		border solid #000
		border-width 2px 0
		transform translateY(-50%)
		@media $desktop
			right 20px
		^[0]--second &
		^[0]--third &
		^[0]--fourth &
			@media $desktop
				display none
		&::before
			position absolute
			top 50%
			right 0
			left 0
			height 2px
			background-color #000
			content ''
			transform translateY(-50%)
	&__menu
		display flex
		flex-direction column
		position fixed
		top 0
		right 0
		bottom 0
		overflow-y auto
		width 280px
		z-index 110
		background-color #000
		padding 60px 0 0
		transform translateX(100%)
		transition all .5s
		@media $tablet-small
			width 340px
			padding 100px 0 0
		^[0]--second &
		^[0]--third &
			@media $desktop
				flex-direction row
				justify-content center
				align-items center
				position absolute
				top auto
				right 0
				bottom 0
				left 0
				overflow hidden
				width auto
				height 50px
				background-color inherit
				padding 0
				transform none
		^[0]--third &
			@media $desktop
				background-color #000
		^[0]--fourth &
			@media $desktop
				flex-direction column
				justify-content center
				position absolute
				top 50%
				right 50px
				overflow hidden
				width auto
				height auto
				background-color inherit
				padding 0
				transform translate(0, -50%)
		&--active
			transform translateX(0)
		&-cover
			animation fadeIn .5s
			position fixed
			top 0
			right 0
			bottom 0
			left 0
			z-index 9
			background-color rgba(#fff, .7)
			&--hide
				animation fadeOut .5s
		&-close
			position absolute
			top 32px
			right 30px
			width 28px
			height @width
			@media $tablet-small
				top 52px
				right 60px
			^[0]--second &
			^[0]--third &
			^[0]--fourth &
				@media $desktop
					display none
			a:hover&
				&::before
				&::after
					background-color #aaa
			&::before
			&::after
				position absolute
				top 0
				left 50%
				bottom 0
				width 2px
				background-color #fff
				margin-left -(@width/2)
				content ''
				transition all .2s
			&::before
				transform rotate(45deg)
			&::after
				transform rotate(-45deg)
		&-items
			display flex
			flex-direction column
			padding 0 20px 0 40px
			@media $tablet-small
				padding 0 20px 0 60px
			^[0]--second &
			^[0]--third &
			^[0]--fourth &
				@media $desktop
					flex-direction row
					justify-content center
					padding 0
		&-item
			align-self flex-start
			position relative
			color #fff
			font-size 2.2rem
			text-decoration none
			padding 10px 0 10px
			margin 5px 0
			^[0]--second &
				@media $desktop
					color #000
					font-size 1.4rem
					padding 0 0 5px
					margin 0 60px 0 0
					&:last-child
						margin-right 0
			^[0]--third &
				@media $desktop
					font-size 1.4rem
					padding 0 0 5px
					margin 0 60px -5px 0
					&:last-child
						margin-right 0
			^[0]--fourth &
				@media $desktop
					color #000
					font-size 1.4rem
					padding 0 0 5px
					margin 0 60px -5px 0
					&:last-child
						margin-right 0
			&::before
				position absolute
				bottom 0
				left 0
				width 0
				height 2px
				background-color currentColor
				content ''
				transition all .2s
			a:hover&
				&::before
					width 100%


/*------------------------------------------------------------------
[3. Footer]
*/
.footer
	position relative
	height 150px
	background-color #000
	&__contact
		position absolute
		top 50%
		right 0
		left 0
		color #fff
		font-size 3.6rem
		text-align center
		transform translateY(-50%)
		@media $tablet-small
			right auto
			left 50%
			transform translate(-50%, -50%)


/*------------------------------------------------------------------
[4. Sidebar]
*/
.sidebar
	display flex
	flex-wrap wrap
	justify-content space-between
	margin 50px 0
	@media $desktop
		display block
		width 360px
		margin 0
	&__block
		width 100%
		background-color #eee
		padding 55px 40px
		margin-bottom 60px
		@media $tablet-small
			width 48%
		@media $desktop
			width auto
			&:last-child
				margin-bottom 0
		&-title
			font-size 2.2rem
			border-bottom 1px solid #b4b4b4
			padding-bottom 5px


/*------------------------------------------------------------------
[5. Homepage slider]
*/
.homepage-slider
	display flex
	flex-direction column
	position relative
	height 100%
	&__item
		display none
		&.active
			display block
			animation fadeIn .5s
			position relative
			height 100%
			padding-bottom 56px
		&-pic
			object-fit cover
			width 100%
			height @width
		&-caption
			display flex
			justify-content center
			align-items center
			position absolute
			right 0
			bottom 0
			left 0
			height 56px
			text-align center
			background-color #fff
			^[0]--dark &
				background-color #000
		&-category
			color #000
			^[0]--dark &
				color #fff
	&__arrow
		position absolute
		bottom 0
		width 12px
		height 56px
		cursor pointer
		a:hover&
			&::before
			&::after
				background-color #888
		&--left
			left 20px
			@media $tablet
				left 50px
			&::before
				transform-origin 0 50%
				transform rotate(-45deg)
			&::after
				transform-origin 0 50%
				transform rotate(45deg)
		&--right
			right 20px
			@media $tablet
				right 50px
			&::before
				transform-origin 100% 50%
				transform rotate(-45deg)
			&::after
				transform-origin 100% 50%
				transform rotate(45deg)
		&::before
		&::after
			position absolute
			top 50%
			left 0
			right 0
			height 1px
			background-color #000
			content ''
			transition all .2s
			^[0]--dark &
				background-color #fff


/*------------------------------------------------------------------
[6. Homepage work]
*/
.homepage-work
	position relative
	height 100%
	margin 0 20px 20px
	@media $desktop
		margin 0
	&__pic
		@media $desktop
			position absolute
			top 0
			right 50px
			bottom 78px
			left 450px
			img
				object-fit cover
				width 100%
				height @width
	&__name
		display block
		color #000
		font-size 3.6rem
		margin-top 20px
		@media $desktop
			position absolute
			bottom 224px
			left 50px
			padding-left 160px
			margin-top 0
			&::before
				position absolute
				top 50%
				left 0
				width 130px
				height 2px
				background-color #000
				content ''
				transform translateY(-50%)


/*------------------------------------------------------------------
[7. About page]
*/
.about
	display flex
	flex-wrap wrap
	justify-content space-between
	margin-bottom 100px
	@media $tablet-small
		flex-wrap nowrap
	&__photo
		order 1
		margin-top 30px
		@media $tablet-small
			order 0
			width 390px
			margin-top 0
		img
			width 100%
	&__main
		order 0
		flex 1
		@media $tablet-small
			order 1
			margin-left 50px
		@media $desktop
			margin-left 120px
	&__text
		font-size 2.2rem
		margin-bottom 35px
	&__info
		display flex
		flex-wrap wrap
		justify-content space-between
		font-size 2.2rem
		margin-bottom 25px
		&-item
			display flex
			width 100%
			margin-bottom 10px
			@media $desktop
				width 48%
		&-title
			min-width 115px
			color #888
		&-value
			flex 1
	&__download-cv
		display inline-flex
		justify-content center
		align-items center
		width 100%
		height 50px
		color #000
		text-transform uppercase
		text-decoration none
		border 1px solid currentColor
		@media $tablet-small
			width 300px
		&::before
			width 15px
			height @width
			background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
			margin-right 9px
			content ''
		a:hover&
			color #666


/*------------------------------------------------------------------
[8. Projects]
*/
.projects
	margin 0
	@media $tablet
		margin 100px 0
	&__title
		position relative
		text-align center
		margin-bottom 30px
		@media $desktop
			margin-bottom 380px
		&::before
			display none
			@media $desktop
				display block
				position absolute
				bottom -240px
				left 50%
				width 1px
				height 130px
				background-color #888
				content ''
				transform translateY(-50%)
		h1
			font normal 6.5rem/1 fontSub
			margin 0 0 20px
			@media $desktop
				font-size 9.5rem
				margin-bottom 0
		&-sub
			color #888
			font-size 2.2rem
			margin-top 10px
	&__item
		position relative
		margin 40px 0
		@media $desktop
			background-color #eee
			margin 190px 0
		&::before
			display none
			@media $desktop
				display block
				position absolute
				font-size 15.5rem
				font-family fontSub
				line-height 1
				content attr(data-symbol)
		&-name
			display block
			color #000
			font-size 3rem
			margin 10px 0
			@media $desktop
				position absolute
				font-size 6rem
				margin 0
		&-category
			text-decoration none
			text-transform uppercase
			@media $desktop
				position absolute
		@media $desktop
			&:nth-child(5n+1)
				max-width 650px
				padding 94px 122px
				margin-left auto
				&::before
					top 0
					left 0
					transform translate(-50%, -40%)
				& ^[1]-name
					bottom 94px
					left 0
					text-align right
					transform translateX(-90%)
				& ^[1]-category
					right 0
					bottom -44px
			&:nth-child(5n+2)
				max-width 555px
				padding 116px 90px
				margin-right auto
				&::before
					bottom 0
					left 0
					transform translateX(-50%)
				& ^[1]-name
					top 96px
					right 0
					transform translateX(90%)
				& ^[1]-category
					right -44px
					bottom 0
					transform-origin bottom right
					transform rotate(-90deg) translateX(100%)
			&:nth-child(5n+3)
				max-width 845px
				padding 72px 120px
				margin-left auto
				&::before
					top 0
					right 0
					transform translate(-50%, -50%)
				& ^[1]-name
					bottom 0
					left 0
					transform translate(18px, 70%)
				& ^[1]-category
					top -44px
					left 0
			&:nth-child(5n+4)
				max-width 600px
				padding 100px
				margin-right auto
				&::before
					top 0
					right 0
					transform translateX(50%)
				& ^[1]-name
					bottom 90px
					right 0
					transform translateX(90%)
				& ^[1]-category
					bottom -44px
					left 0
			&:nth-child(5n+5)
				max-width 530px
				padding 90px 80px
				margin-left auto
				&::before
					right 0
					bottom 0
					transform translateX(50%)
				& ^[1]-name
					top 80px
					left 0
					max-width none
					text-align right
					transform translateX(-90%)
				& ^[1]-category
					bottom 0
					left -44px
					transform-origin bottom right
					transform rotate(-90deg) translateX(100%)


/*------------------------------------------------------------------
[9. Project item]
*/
.project
	display flex
	flex-direction column
	position relative
	margin 0 20px 50px
	@media $desktop
		display flex
		flex-direction row
		justify-content space-between
		padding 0 0 320px 150px
		margin -130px 0 0
	&__details
		order 1
		max-width 530px
		margin-top 30px
		@media $desktop
			order 0
			margin-top 130px
		&-category
			color #888
			text-transform uppercase
			margin-bottom 10px
			@media $desktop
				margin-bottom 30px
			a
				color #888
				text-decoration none
				&:hover
					text-decoration underline
		&-name
			font-size 3.6rem
			margin 0 0 20px
			@media $desktop
				margin 0 0 50px
		&-description
			line-height 2
			p:first-child
				margin-top 0
	&__gallery
		flex 1
		position relative
		padding-bottom 15px
		@media $desktop
			height 100%
			margin-left 130px
		&-item
			display none
			&.active
				display block
				animation fadeIn .5s
				@media $desktop
					height 100%
				img
					width 100%
					@media $desktop
						object-fit cover
						height @width
		&-indicators
			display flex
			position absolute
			right 0
			bottom 0
			left 0
		&-indicator
			flex 1
			height 15px
			background-color #888
			cursor pointer
			transition all .2s
			&.active
				background-color #000
	&__nav
		order 2
		margin-top 40px
		@media $desktop
			display flex
			justify-content space-between
			position absolute
			right 50px
			bottom 140px
			left 50px
			margin-top 0
		&-item
			&:last-child
				margin-top 20px
				@media $desktop
					text-align right
					margin-top 0
		&-title
			color #888
		&-link
			color #000
			font-size 2.2rem
			text-decoration none
			a:hover&
				text-decoration underline


/*------------------------------------------------------------------
[10. Pricing]
*/
.pricing
	display flex
	flex-wrap wrap
	justify-content space-between
	margin 50px 0
	@media $tablet-small
		flex-wrap nowrap
		margin 150px 0
	@media $desktop
		margin 300px 0 150px
	&__item
		position relative
		width 100%
		background-color #eee
		padding 25px 0 100px
		margin-bottom 30px
		@media $tablet-small
			width calc(33.33% - 30px)
			margin-right 30px
			margin-bottom 0
		@media $desktop
			width calc(33.33% - 60px)
			padding 50px 0 150px
			margin-right 60px
		&:last-child
			margin-right 0
		&-title
			font-size 2.4rem
			text-align center
			padding 0 30px
			margin-bottom 15px
		&-cost
			display flex
			justify-content center
			align-items center
			font-size 7.2rem
			font-family fontSub
			line-height 1
			text-align center
			padding 0 30px
			margin-bottom 15px
			&--currency
				font-size 3.6rem
				font-family fontMain
				margin-right 10px
		&-descr
			padding 0 30px
			margin-bottom 15px
			@media $desktop
				padding 0 60px
		&-features
			list-style none
			padding 0 30px
			margin 0
			@media $desktop
				padding 0 60px
			li
				position relative
				padding-left 25px
				margin 15px 0
				&::before
					position absolute
					top 2px
					left 0
					width 15px
					height @width
					background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
					content ''
		&-signup
			display flex
			justify-content center
			align-items center
			position absolute
			right 30px
			bottom 30px
			left @right
			height 50px
			color #000
			text-transform uppercase
			text-decoration none
			border 1px solid currentColor
			@media $desktop
				right 60px
				bottom 60px
				left @right
			a:hover&
				color #666


/*------------------------------------------------------------------
[11. Articles]
*/
.articles
	margin-bottom 50px
	@media $tablet
		margin-bottom 150px
	&__list
		@media $tablet
			margin-top 300px
	&__item
		margin-bottom 50px
		@media $tablet
			display flex
			justify-content space-between
			margin-bottom 150px
			&:nth-child(2n)
				align-items center
				margin-bottom 230px
				& ^[1]-pic
					order 1
				& ^[1]-category
					top auto
					right auto
					bottom -40px
					left 0
				& ^[1]-info
					text-align right
					margin 0 60px 0 0
		&:last-child
			@media $tablet
				margin-bottom 160px
		&-pic
			position relative
		&-category
			position absolute
			bottom 0
			left 0
			color #888
			text-transform uppercase
			text-decoration none
			background-color #fff
			padding 8px 10px
			@media $tablet
				top -40px
				right 0
				bottom auto
				left auto
				text-decoration underline
				background-color transparent
				padding 0
		&-info
			margin-top 10px
			@media $tablet
				flex 1
				margin 115px 0 0 60px
		&-title
			color #000
			font-size 3.6rem
			margin-bottom 10px
			@media $tablet
				margin-bottom 20px
			a
				color @color
				font-size @font-size
		&-system
			color #888
		&-date
			margin-right 30px
		&-comments
			display inline-flex
			align-items center
			color #888
			text-decoration none
			&::before
				width 15px
				height 13px
				background url('../i/icons/icon-comment.svg') no-repeat 0 0 / cover
				margin-right 6px
				content ''
	&__loadmore
		text-align center
		&-btn
			display inline-flex
			justify-content center
			align-items center
			height 50px
			color #000
			text-transform uppercase
			text-decoration none
			border 1px solid currentColor
			padding 0 80px
			&::before
				width 12px
				height @width
				background url('data:image/svg+xml;base64,') no-repeat 0 0 / cover
				margin-right 10px
				content ''
			a:hover&
				color #666


/*------------------------------------------------------------------
[12. Blog]
*/
.blog
	margin 50px 0
	@media $desktop
		display flex
		justify-content space-between
		margin 130px 0 150px
	&__main
		@media $desktop
			flex 1
			margin-right 100px
			^[0]-post &
				margin-right 30px
	&__item
		margin-bottom 50px
		@media $desktop
			display flex
			justify-content space-between
			margin-bottom 100px
		&:last-child
			margin-bottom 60px
		&-pic
			position relative
			@media $desktop
				width 360px
				padding-top 40px
			img
				width 100%
				@media $desktop
					object-fit cover					
		&-category
			position absolute
			color #888
			bottom 0
			left 0
			text-transform uppercase
			text-decoration none
			background-color #fff
			padding 8px 10px
			@media $desktop
				top 0
				right 0
				bottom auto
				left auto
				text-decoration underline
				background-color transparent
				padding 0
		&-main
			margin-top 15px
			@media $desktop
				flex 1
				margin 95px 0 0 30px
		&-title
			position relative
			color #000
			font-size 3.6rem
			margin-bottom 15px
			@media $desktop
				margin 0 0 55px -195px
			a
				color @color
				font-size @font-size
		&-text
			margin-bottom 20px
			p
				&:first-child
					margin-top 0
				&:last-child
					margin-bottom 0
		&-system
			display flex
			justify-content space-between
			color #888
		&-comments
			display inline-flex
			align-items center
			color #888
			text-decoration none
			&::before
				width 15px
				height 13px
				background url('../i/icons/icon-comment.svg') no-repeat 0 0 / cover
				margin-right 6px
				content ''
	&__loadmore
		text-align center
		&-btn
